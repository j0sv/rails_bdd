<h1>Create new article</h1>

<% if @article.errors.any? %>
    <ul>
      <% @article.errors.full_messages.each do |error| %>
          <li><%= error %></li>
      <% end %>
    </ul>
<% end %>

<%= form_for @article, url: articles_path, html: {class: "nifty_form"} do |f| %>
    <%= f.label :title %>
    <%= f.text_field :title %>
    <%= f.label :author %>
    <%= f.text_field :author %>
    <%= f.label :content %>
    <%= f.text_area :content, size: "60x96" %>
    <%= f.submit "Create Article" %>
<% end %>
